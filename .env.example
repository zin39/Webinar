# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/webinar_db?schema=public"

# ===========================================
# SECURITY - Generate your own secrets!
# ===========================================
# Session secret (generate with: openssl rand -hex 64)
SESSION_SECRET="your-64-byte-hex-secret-here"

# CSRF secret (generate with: openssl rand -hex 32)
CSRF_SECRET="your-32-byte-hex-secret-here"

# ===========================================
# APPLICATION
# ===========================================
PORT=3000
NODE_ENV=development

# Site URL (for social sharing and Open Graph tags)
# Set this to your production domain
SITE_URL="https://yourdomain.com"

# Trust proxy (set to 1 if behind reverse proxy like nginx)
TRUST_PROXY=0

# ===========================================
# EMAIL (SMTP Configuration)
# ===========================================
# For Gmail: Use App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="Webinar <noreply@example.com>"

# ===========================================
# WEBINAR CONFIGURATION
# ===========================================
WEBINAR_DATE="2025-11-30T12:30:00Z"
WEBINAR_MEETING_LINK=""
WEBINAR_TITLE="Mental Health Webinar"

# ===========================================
# RATE LIMITING
# ===========================================
# Login attempts before lockout
LOGIN_MAX_ATTEMPTS=5
LOGIN_WINDOW_MS=900000

# Registration attempts per IP
REGISTER_MAX_ATTEMPTS=10
REGISTER_WINDOW_MS=3600000
