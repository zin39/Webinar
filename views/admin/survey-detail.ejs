<%- include('../partials/header') %>

<div class="admin-layout">
  <!-- Admin Sidebar -->
  <aside class="admin-sidebar">
    <div class="sidebar-header">
      <h2>Admin Panel</h2>
      <span class="admin-name"><%= user.name %></span>
    </div>
    <nav class="sidebar-nav">
      <a href="/admin" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        Attendees
      </a>
      <a href="/admin/surveys" class="sidebar-link active">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M9 11l3 3L22 4"></path>
          <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
        </svg>
        Surveys
      </a>
      <a href="/admin/emails" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        Email Logs
      </a>
      <a href="/admin/analytics" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <line x1="18" y1="20" x2="18" y2="10"></line>
          <line x1="12" y1="20" x2="12" y2="4"></line>
          <line x1="6" y1="20" x2="6" y2="14"></line>
        </svg>
        Analytics
      </a>
      <a href="/admin/settings" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <circle cx="12" cy="12" r="3"></circle>
          <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
        </svg>
        Settings
      </a>
      <a href="/admin/export" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        Export CSV
      </a>
      <a href="/" class="sidebar-link" target="_blank">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
        View Site
      </a>
      <a href="/auth/logout" class="sidebar-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
          <polyline points="16 17 21 12 16 7"></polyline>
          <line x1="21" y1="12" x2="9" y2="12"></line>
        </svg>
        Logout
      </a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="admin-main">
    <div class="admin-header">
      <div style="display: flex; align-items: center; gap: 15px;">
        <a href="/admin/surveys" class="btn btn-outline">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back
        </a>
        <h1>Survey Response</h1>
      </div>
    </div>

    <!-- Response Header Card -->
    <div class="table-card" style="margin-bottom: 20px;">
      <div style="padding: 24px;">
        <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 20px;">
          <div>
            <h2 style="margin: 0 0 8px 0; font-size: 1.5rem;"><%= response.name || 'Anonymous' %></h2>
            <p style="margin: 0; color: #64748b;"><%= response.email %></p>
          </div>
          <div style="text-align: right;">
            <span class="badge <%= response.surveyType === 'pre-webinar' ? 'badge-info' : 'badge-success' %>" style="font-size: 14px; padding: 6px 14px;">
              <%= response.surveyType === 'pre-webinar' ? 'Pre-Webinar Survey' : 'Post-Webinar Survey' %>
            </span>
            <p style="margin: 10px 0 0 0; color: #64748b; font-size: 14px;">
              Submitted: <%= new Date(response.submittedAt).toLocaleString() %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Response Details -->
    <div class="table-card">
      <div class="table-header">
        <h2>Response Details</h2>
      </div>
      <div style="padding: 24px;">
        <% if (response.surveyType === 'pre-webinar') { %>
          <!-- Pre-Webinar Survey Responses -->
          <div class="survey-detail-grid">
            <div class="survey-detail-item">
              <label>Knowledge Level</label>
              <p><%= response.knowledgeLevel || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Academic Stress Experience</label>
              <p><%= response.academicStress || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Comfort Level (1-5)</label>
              <p>
                <% if (response.comfortLevel) { %>
                  <span class="rating-display">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <span class="rating-star <%= i <= response.comfortLevel ? 'filled' : '' %>">&#9733;</span>
                    <% } %>
                    <span class="rating-value">(<%= response.comfortLevel %>/5)</span>
                  </span>
                <% } else { %>
                  Not provided
                <% } %>
              </p>
            </div>
            <div class="survey-detail-item">
              <label>Knows Resources</label>
              <p><%= response.knowsResources || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item full-width">
              <label>Hopes to Learn</label>
              <p class="long-text"><%= response.hopesToLearn || 'Not provided' %></p>
            </div>
          </div>
        <% } else { %>
          <!-- Post-Webinar Survey Responses -->
          <div class="survey-detail-grid">
            <div class="survey-detail-item">
              <label>Overall Satisfaction</label>
              <p><%= response.satisfaction || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Knowledge Level After</label>
              <p><%= response.knowledgeLevelAfter || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Content Relevance (1-5)</label>
              <p>
                <% if (response.contentRelevance) { %>
                  <span class="rating-display">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <span class="rating-star <%= i <= response.contentRelevance ? 'filled' : '' %>">&#9733;</span>
                    <% } %>
                    <span class="rating-value">(<%= response.contentRelevance %>/5)</span>
                  </span>
                <% } else { %>
                  Not provided
                <% } %>
              </p>
            </div>
            <div class="survey-detail-item">
              <label>Facilitator Rating (1-5)</label>
              <p>
                <% if (response.facilitatorRating) { %>
                  <span class="rating-display">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <span class="rating-star <%= i <= response.facilitatorRating ? 'filled' : '' %>">&#9733;</span>
                    <% } %>
                    <span class="rating-value">(<%= response.facilitatorRating %>/5)</span>
                  </span>
                <% } else { %>
                  Not provided
                <% } %>
              </p>
            </div>
            <div class="survey-detail-item">
              <label>Learned Strategies</label>
              <p><%= response.learnedStrategies || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Comfort Level After</label>
              <p><%= response.comfortLevelAfter || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Knows Resources After</label>
              <p><%= response.knowsResourcesAfter || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item">
              <label>Would Recommend</label>
              <p><%= response.wouldRecommend || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item full-width">
              <label>Most Valuable Takeaway</label>
              <p class="long-text"><%= response.mostValuable || 'Not provided' %></p>
            </div>
            <div class="survey-detail-item full-width">
              <label>Suggestions for Improvement</label>
              <p class="long-text"><%= response.improvements || 'Not provided' %></p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>
</div>

<style>
  .badge-info {
    background: #dbeafe;
    color: #1d4ed8;
  }

  .survey-detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .survey-detail-item {
    background: #f8fafc;
    padding: 16px;
    border-radius: 8px;
  }

  .survey-detail-item.full-width {
    grid-column: 1 / -1;
  }

  .survey-detail-item label {
    display: block;
    font-size: 12px;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .survey-detail-item p {
    margin: 0;
    font-size: 16px;
    color: #1e293b;
  }

  .survey-detail-item .long-text {
    white-space: pre-wrap;
    line-height: 1.6;
  }

  .rating-display {
    display: inline-flex;
    align-items: center;
    gap: 2px;
  }

  .rating-star {
    font-size: 18px;
    color: #cbd5e1;
  }

  .rating-star.filled {
    color: #f59e0b;
  }

  .rating-value {
    margin-left: 8px;
    color: #64748b;
    font-size: 14px;
  }
</style>

<%- include('../partials/footer') %>
