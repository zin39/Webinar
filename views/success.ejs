<%- include('partials/header') %>
<%- include('partials/nav') %>

<section class="success-section">
  <div class="container">
    <div class="success-card">
      <div class="success-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>

      <h1>You're Registered!</h1>
      <p class="success-message">
        Thank you for registering! We've sent a confirmation email to <strong><%= email %></strong> with all the details.
      </p>

      <div class="success-details">
        <h3><%= webinar.title %></h3>
        <div class="success-meta">
          <div class="meta-item">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <span><%= new Date(webinar.date).toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' }) %></span>
          </div>
          <div class="meta-item">
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <span>
              <%
                const utcDateSuc = new Date(webinar.date);
                const nepalOffsetSuc = 5 * 60 + 45;
                const nepalDateSuc = new Date(utcDateSuc.getTime() + nepalOffsetSuc * 60 * 1000);
                const nepalHoursSuc = nepalDateSuc.getUTCHours();
                const nepalMinutesSuc = nepalDateSuc.getUTCMinutes();
                const nepalAmPmSuc = nepalHoursSuc >= 12 ? 'PM' : 'AM';
                const nepalHour12Suc = nepalHoursSuc % 12 || 12;
                const nepalTimeStrSuc = nepalHour12Suc + ':' + (nepalMinutesSuc < 10 ? '0' : '') + nepalMinutesSuc + ' ' + nepalAmPmSuc + ' NPT';
              %>
              <%= nepalTimeStrSuc %> / <%= utcDateSuc.getUTCHours() %>:<%= utcDateSuc.getUTCMinutes() < 10 ? '0' : '' %><%= utcDateSuc.getUTCMinutes() %> UTC
            </span>
          </div>
        </div>
      </div>

      <div class="calendar-section">
        <h3>Add to Calendar</h3>
        <p>Don't forget to add this event to your calendar!</p>
        <div class="calendar-buttons">
          <a href="<%= calendarLinks.google %>" target="_blank" class="btn btn-outline">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
              <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm-1-11v6h2v-6h-2zm0-4v2h2V7h-2z"/>
            </svg>
            Google Calendar
          </a>
          <a href="<%= calendarLinks.outlook %>" target="_blank" class="btn btn-outline">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
              <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm-1-11v6h2v-6h-2zm0-4v2h2V7h-2z"/>
            </svg>
            Outlook
          </a>
          <a href="<%= calendarLinks.ics %>" download="webinar.ics" class="btn btn-outline">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Download .ics
          </a>
        </div>
      </div>

      <div class="success-next">
        <h3>What's Next?</h3>
        <ul>
          <li>Check your email for the confirmation with the join link</li>
          <li>Add the event to your calendar</li>
          <li>Join us 5 minutes before the webinar starts</li>
          <li>Prepare any questions you'd like to ask during Q&A</li>
        </ul>
      </div>

