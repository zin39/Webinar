<%- include('partials/header') %>
<%- include('partials/nav') %>

<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <!-- Mental Health Illustration -->
      <div class="hero-illustration">
        <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
          <!-- Brain/Mind circle -->
          <circle cx="100" cy="100" r="80" fill="#EEF2FF" stroke="#2563eb" stroke-width="2"/>
          <!-- Peaceful face -->
          <circle cx="100" cy="100" r="60" fill="#DBEAFE"/>
          <!-- Closed eyes (peaceful) -->
          <path d="M75 95 Q80 90 85 95" stroke="#1e293b" stroke-width="2" fill="none" stroke-linecap="round"/>
          <path d="M115 95 Q120 90 125 95" stroke="#1e293b" stroke-width="2" fill="none" stroke-linecap="round"/>
          <!-- Gentle smile -->
          <path d="M85 115 Q100 125 115 115" stroke="#1e293b" stroke-width="2" fill="none" stroke-linecap="round"/>
          <!-- Decorative leaves/growth -->
          <path d="M160 60 Q170 50 180 60 Q170 70 160 60" fill="#10b981" opacity="0.8"/>
          <path d="M165 75 Q175 65 185 75 Q175 85 165 75" fill="#10b981" opacity="0.6"/>
          <path d="M25 130 Q15 120 25 110 Q35 120 25 130" fill="#10b981" opacity="0.8"/>
          <path d="M20 145 Q10 135 20 125 Q30 135 20 145" fill="#10b981" opacity="0.6"/>
          <!-- Hearts representing care -->
          <path d="M40 50 Q45 45 50 50 Q55 45 60 50 Q60 58 50 65 Q40 58 40 50" fill="#f59e0b" opacity="0.7"/>
          <path d="M150 140 Q153 137 156 140 Q159 137 162 140 Q162 145 156 150 Q150 145 150 140" fill="#f59e0b" opacity="0.7"/>
          <!-- Stars/sparkles -->
          <circle cx="170" cy="100" r="3" fill="#2563eb"/>
          <circle cx="30" cy="90" r="3" fill="#2563eb"/>
          <circle cx="50" cy="160" r="2" fill="#2563eb"/>
          <circle cx="155" cy="45" r="2" fill="#2563eb"/>
        </svg>
      </div>
      <h1 class="hero-title"><%= webinar.title %></h1>
      <p class="hero-subtitle"><%= webinar.subtitle %></p>

      <div class="hero-meta">
        <div class="meta-item">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span id="webinar-date"><%= new Date(webinar.date).toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' }) %></span>
        </div>
        <div class="meta-item">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <span>
            <%
              const utcDate = new Date(webinar.date);
              const nepalOffset = 5 * 60 + 45; // Nepal is UTC+5:45
              const nepalDate = new Date(utcDate.getTime() + nepalOffset * 60 * 1000);
              const nepalHours = nepalDate.getUTCHours();
              const nepalMinutes = nepalDate.getUTCMinutes();
              const nepalAmPm = nepalHours >= 12 ? 'PM' : 'AM';
              const nepalHour12 = nepalHours % 12 || 12;
              const nepalTimeStr = nepalHour12 + ':' + (nepalMinutes < 10 ? '0' : '') + nepalMinutes + ' ' + nepalAmPm + ' NPT';
            %>
            <%= nepalTimeStr %> / <%= utcDate.getUTCHours() %>:<%= utcDate.getUTCMinutes() < 10 ? '0' : '' %><%= utcDate.getUTCMinutes() %> UTC
          </span>
        </div>
        <div class="meta-item">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span><%= webinar.duration %> minutes</span>
        </div>
      </div>

      <a href="/register" class="btn btn-primary btn-lg">Register Now - It's Free</a>

      <!-- Countdown Timer -->
      <div class="countdown" id="countdown" data-date="<%= new Date(webinar.date).toISOString() %>">
        <div class="countdown-item">
          <span class="countdown-value" id="days">00</span>
          <span class="countdown-label">Days</span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value" id="hours">00</span>
          <span class="countdown-label">Hours</span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value" id="minutes">00</span>
          <span class="countdown-label">Minutes</span>
        </div>
        <div class="countdown-item">
          <span class="countdown-value" id="seconds">00</span>
          <span class="countdown-label">Seconds</span>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="social-proof">
        <div class="avatars">
          <div class="avatar"></div>
          <div class="avatar"></div>
          <div class="avatar"></div>
          <div class="avatar"></div>
        </div>
        <span><strong id="attendee-count"><%= attendeeCount %></strong> people have already registered</span>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
