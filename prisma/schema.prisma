generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attendee {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  company      String?
  jobTitle     String?
  phone        String?
  howHeard     String?
  registeredAt DateTime @default(now())
  emailSent    Boolean  @default(false)
  surveyToken  String?  @unique  // Token for secure survey access
  reminder1Sent Boolean @default(false)
  reminder2Sent Boolean @default(false)
  reminder3Sent Boolean @default(false)
  postWebinarSent Boolean @default(false)
}

model WebinarConfig {
  id           String   @id @default(cuid())
  title        String
  subtitle     String?
  description  String?
  date         DateTime
  duration     Int      @default(60)
  meetingLink  String?
  speakerName  String?
  speakerBio   String?
  speakerImage String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Analytics - Page Views
model PageView {
  id        String   @id @default(cuid())
  path      String
  method    String   @default("GET")
  ip        String?
  userAgent String?
  browser   String?
  os        String?
  device    String?
  country   String?
  referer   String?
  sessionId String?
  timestamp DateTime @default(now())

  @@index([path])
  @@index([timestamp])
  @@index([sessionId])
}

// Error Logs
model ErrorLog {
  id        String   @id @default(cuid())
  level     String   // error, warn, info
  message   String
  stack     String?
  path      String?
  method    String?
  ip        String?
  userAgent String?
  userId    String?
  metadata  String?  // JSON string for additional data
  timestamp DateTime @default(now())

  @@index([level])
  @@index([timestamp])
}

// Email Logs
model EmailLog {
  id           String   @id @default(cuid())
  toEmail      String
  toName       String?
  subject      String
  type         String   // confirmation, reminder, notification, resend
  status       String   // sent, failed, skipped
  errorMessage String?
  errorCode    String?
  smtpResponse String?
  attendeeId   String?
  retryCount   Int      @default(0)
  metadata     String?  // JSON string for additional data
  timestamp    DateTime @default(now())

  @@index([toEmail])
  @@index([status])
  @@index([type])
  @@index([timestamp])
}

// Survey Responses
model SurveyResponse {
  id                    String   @id @default(cuid())
  email                 String
  name                  String?
  surveyType            String   // pre-webinar, post-webinar

  // Pre-webinar questions
  knowledgeLevel        String?  // Very Low, Low, Moderate, High, Very High
  academicStress        String?  // Yes personally, Yes someone I know, Both, No, Prefer not to say
  comfortLevel          Int?     // 1-5 scale
  knowsResources        String?  // Yes I know several, Yes I know one or two, Not sure, No
  hopesToLearn          String?  // Open-ended

  // Post-webinar questions
  satisfaction          String?  // Very Dissatisfied to Very Satisfied
  knowledgeLevelAfter   String?  // Very Low to Very High
  contentRelevance      Int?     // 1-5 scale
  facilitatorRating     Int?     // 1-5 scale
  learnedStrategies     String?  // Strongly Disagree to Strongly Agree
  comfortLevelAfter     String?  // Strongly Disagree to Strongly Agree
  knowsResourcesAfter   String?  // Strongly Disagree to Strongly Agree
  mostValuable          String?  // Open-ended
  improvements          String?  // Open-ended
  wouldRecommend        String?  // Definitely Not to Definitely Yes

  submittedAt           DateTime @default(now())

  @@index([email])
  @@index([surveyType])
  @@index([submittedAt])
}

// Scheduled Email Configuration
model ScheduledEmail {
  id            String    @id @default(cuid())
  slot          Int       @unique  // 1, 2, or 3
  scheduledTime DateTime? // When to send (stored in UTC)
  subject       String?   // Custom subject line
  enabled       Boolean   @default(false)
  lastRun       DateTime? // Last execution time
  status        String    @default("pending") // pending, running, completed
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
