generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attendee {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  company      String?
  jobTitle     String?
  phone        String?
  howHeard     String?
  registeredAt DateTime @default(now())
  emailSent    Boolean  @default(false)
}

model WebinarConfig {
  id           String   @id @default(cuid())
  title        String
  subtitle     String?
  description  String?
  date         DateTime
  duration     Int      @default(60)
  meetingLink  String?
  speakerName  String?
  speakerBio   String?
  speakerImage String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Analytics - Page Views
model PageView {
  id        String   @id @default(cuid())
  path      String
  method    String   @default("GET")
  ip        String?
  userAgent String?
  browser   String?
  os        String?
  device    String?
  country   String?
  referer   String?
  sessionId String?
  timestamp DateTime @default(now())

  @@index([path])
  @@index([timestamp])
  @@index([sessionId])
}

// Error Logs
model ErrorLog {
  id        String   @id @default(cuid())
  level     String   // error, warn, info
  message   String
  stack     String?
  path      String?
  method    String?
  ip        String?
  userAgent String?
  userId    String?
  metadata  String?  // JSON string for additional data
  timestamp DateTime @default(now())

  @@index([level])
  @@index([timestamp])
}
